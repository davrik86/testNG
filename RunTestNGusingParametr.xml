<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="This is my 1st suit">
    
    <test name="Running this test using groups">

        <!--We need to specify what group of test we need to run similar to Cucumber-->
        <groups>
            <run>

                <include name="regression"/>


            </run>
        </groups>

<!--We need to specify the xml to find the test case-->
        <packages>
            <package name="testcases"/>
        </packages>
    </test>
    
    
</suite>